{
  "private": true,
  "type": "module",
  "license": "SEE LICENSE IN LICENSE",
  "name": "brootaylor.com",
  "version": "3.0.0",
  "description": "Version 3 of my personal website, brootaylor.com.",
  "keywords": [
    "personal-website",
    "blog"
  ],
  "author": {
    "name": "Bruce Taylor",
    "url": "https://brootaylor.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/brootaylor/brootaylor-v3.git"
  },
  "homepage": "https://github.com/brootaylor/brootaylor-v3#readme",
  "bugs": {
    "url": "https://github.com/brootaylor/brootaylor-v3/issues"
  },
  "scripts": {
    "clean": "rimraf dist && mkdir dist",
    "prebuild": "npm run clean && echo 'Getting rid of old stuff first ðŸ”¥'",
    "lint:markdown": "markdownlint src/**/*.md",
    "postcss": "postcss --map --no-map -r dist/styles/*.css --config config/postcss.config.js",
    "sass:tokens": "rimraf src/styles/tokens/*.scss && json-to-scss 'tokens/*.json' 'src/styles/tokens/_tokens.scss'",
    "sass:dev": "npm run sass:tokens && npx sass --style=expanded --no-source-map --watch src:dist",
    "sass:prod": "npm run sass:tokens && npx sass --style=compressed src:dist",
    "dev:files": "eleventy --serve --quiet",
    "dev:styles": "npm run sass:dev",
    "dev:scripts": "cross-env rollup -c config/rollup.config.mjs --watch",
    "dev": "run-p dev:*",
    "build:files": "eleventy --quiet",
    "build:styles": "npm run sass:prod",
    "build:scripts": "rollup -c config/rollup.config.mjs",
    "build": "run-s build:styles build:scripts build:files",
    "deploy:build": "cross-env NODE_ENV=production npm run build",
    "postbuild": "npm run postcss",
    "netlify-build": "ntl build",
    "netlify-dev": "ntl dev --debug",
    "netlify-dev:live": "ntl dev --live",
    "netlify-cms:local": "npx netlify-cms-proxy-server",
    "netlify-deploy:draft": "ntl deploy",
    "netlify-deploy:production": "ntl deploy --prod",
    "audit:browser-support": "npx browserslist && echo 'ðŸ”† Modify .browserslistrc if and when browser support changes. ðŸ”†'",
    "audit:accessibility": "npx pa11y-ci --config ./config/pa11y.json > ./audits/accessibility_report/brootaylor-accessibility-results.md",
    "audit:performance": "lighthouse https://brootaylor.com --budget-path=config/performance-budget.json --output-path=./audits/lighthouse_report/brootaylor-performance-results.html --view",
    "audit:vulnerabilities": "npx is-website-vulnerable https://brootaylor.com",
    "audit:npm-local": "ncu",
    "audit:npm-global": "ncu -g",
    "debug": "DEBUG=* npx eleventy"
  },
  "dependencies": {
    "@11ty/eleventy": "^3.0.0",
    "@11ty/eleventy-img": "^5.0.0",
    "@11ty/eleventy-navigation": "^0.3.5",
    "@11ty/eleventy-plugin-rss": "^2.0.2",
    "@11ty/eleventy-plugin-syntaxhighlight": "^5.0.0",
    "@rollup/plugin-commonjs": "^28.0.2",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-terser": "^0.4.4",
    "autoprefixer": "^10.4.20",
    "cross-env": "^7.0.3",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.7",
    "html-minifier": "^4.0.0",
    "json-to-scss": "^1.6.2",
    "lodash": "^4.17.21",
    "luxon": "^3.5.0",
    "markdown-it": "^14.1.0",
    "markdown-it-abbr": "^2.0.0",
    "markdown-it-anchor": "^9.2.0",
    "markdown-it-attrs": "^4.3.1",
    "normalize-url": "^8.0.1",
    "npm-run-all": "^4.1.5",
    "object-fit-images": "^3.2.4",
    "postcss": "^8.4.49",
    "postcss-cli": "^11.0.0",
    "postcss-preset-env": "^10.1.3",
    "rimraf": "^6.0.1",
    "rollup": "^4.29.2",
    "sass": "^1.83.1",
    "slugify": "^1.6.6"
  },
  "devDependencies": {
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-html": "^8.1.2",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "markdownlint-cli": "^0.43.0",
    "minami": "^1.2.3",
    "netlify-cli": "^17.38.1",
    "onchange": "^7.1.0",
    "prettier": "^3.4.2"
  },
  "engines": {
    "node": "^20.0.0"
  }
}
