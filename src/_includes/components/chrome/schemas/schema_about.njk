<script type="application/ld+json">
{
	"@context": "https://schema.org",
	"@type": "WebPage",
	"name": "{{ title }} • {{ site.metaDescription }}",
	"url": "{{ site.rootUrl }}{{ page.url | pretty }}",
	"description": "{{ summary }}",
	"inLanguage": "{{ site.lang }}",
	"breadcrumb": {
		"@type": "BreadcrumbList",
		"itemListElement": [
			{
				"@type": "ListItem",
				"position": 2,
				"name": "About",
				"item": "{{ site.rootUrl }}{{ page.url | pretty }}"
			}
		]
	},
	"mainEntity": {
		"@type": "WebPage",
		"name": "{{ title }} • {{ site.metaDescription }}",
		"description": "{{ summary }}",
		"url": "{{ site.rootUrl }}{{ page.url | pretty }}"
	},
	"primaryImageOfPage": {
		"@type": "ImageObject",
		"url": "{{ site.author.thumbnail }}"
	},
	"author": {
		"@type": "Person",
		"name": "{{ site.author.name }}",
		"address": {
			"@type": "PostalAddress",
			"addressLocality": "Crawley",
			"addressRegion": "West Sussex",
			"addressCountry": "GB"
		}
	},
	"sameAs": [
		{% for url in site.socialMedia -%}
		"{{ url }}"{% if not loop.last %},{% endif%}
		{% endfor -%}
	]
}
</script>
