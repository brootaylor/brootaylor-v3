<div class="video">
	<div class="video--inner">
		{% if content.data.video.custom %}
		{# Custom video (ie. calling own hosted videos) #}
			<video controls>
				<source src="{{ content.data.video.custom.src.mp4 }}" type="video/mp4">
				<source src="{{ content.data.video.custom.src.webm }}" type="video/webm">
				<p>Your browser doesn't support HTML5 video. Here is a <a href="{{ content.data.video.custom.src.mp4 }}">link to the video</a> instead.</p>
			</video>
		{% elif content.data.video.thirdParty %}
		{# 3rd party video (ie. Youtube or Vimeo) #}
			<iframe src="//{% if data.video.thirdParty.youtube.src %}www.youtube.com/embed/{{ data.video.thirdParty.youtube.src }}{% elif content.data.video.thirdParty.vimeo.src %}player.vimeo.com/video/{{ content.data.video.thirdParty.vimeo.src }}{% endif %}&amp;controls=0" title="Video player." allow="encrypted-media; picture-in-picture" allowfullscreen></iframe>
		{% endif %}
	</div>
</div>
